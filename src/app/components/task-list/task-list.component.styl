.wrapper
  width 100%
  .heading
    display flex
    justify-content space-between
    width 100%
    border-bottom 2px solid #D95A58
    .id
      color #D95A58
      font-weight bold
      text-align center
      width 50px
    .comment
      color #D95A58
      font-weight bold
      text-align center
      flex 1
    .status
      color #D95A58
      font-weight bold
      text-align center
      width 120px
      margin-right 80px
  ul
    li
      display flex
      line-height 40px
      border-bottom 1px solid #eee
      &.gray
        background #f0f0f0
      &.red
        background #FAEAEA
      .id
        font-weight bold
        text-align center
        width 50px
      .comment
        flex 1
      .status
        width 120px
        text-align center
        .label
          display inline-block
          margin 0 auto
          padding 0 10px
          font-size 14px
          border-radius 5px
          height 25px
          line-height 25px
        .new
          background #EAA8A8
          color #fff
        .done
          background #ddd
          color #fff
        .wip
          background #D95A58
          color #fff
          font-weight bold
        .pending
          background #FAEAEA
          color #fff
      .edit
        width 40px
        text-align center
        .icon
          color #bbb
          font-size 14px
      .trash
        width 40px
        text-align center
        button
          outline none
          cursor pointer
          border none
          background none
          i
            color #bbb
            font-size 14px